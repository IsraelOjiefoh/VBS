<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div>
    <h1>Register</h1>
    <% if (locals.errors) { %>
  <div id="error-messages" class="alert alert-danger">
    <% locals.errors.forEach((error, index) => { %>
      <p><%= error %></p>
    <% }) %>
  </div>
  <script>
    setTimeout(function() {
      var errorMessages = document.getElementById('error-messages');
      if (errorMessages) {
        errorMessages.remove();
      }
    }, 4000); // 3000 milliseconds = 2 seconds
  </script>
<% } %>
    <form action="/register" method="POST">
      <label for="firstname">Firstname:</label>
      <input type="text" autocomplete="given-name" name="first_name" id="firstname" required>
      
      <label for="lastname">Lastname:</label>
      <input type="text" autocomplete="family-name" name="last_name" id="lastname" required>
      
      <label for="email">Enter your email:</label>
      <input type="email" name="email" id="email" required>
      
 <div>
        <input type="checkbox" id="is_over_18" name="is_over_18" value="true" required>
        <label for="is_over_18">I confirm that I am 18 years or older</label>
 </div>
    
      <button type="submit">Register</button>
     
      <div>
        <a class="login-cta" href="/login">Existing user? Login</a>     
      </div>
      
    </form>
  </div>
</body>
</html>